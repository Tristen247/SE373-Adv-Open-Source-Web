<!-- views/employees/viewEmployees.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Employees</title>
</head>
<body>
  <h1>Employee List</h1>
  
  {{#if employees.length}}
    <table border="1" cellpadding="5">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Department</th>
          <th>Start Date</th>
          <th>Job Title</th>
          <th>Salary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each employees}}
          <tr>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.department}}</td>
            <td>{{formatAsDate this.startDate "MMMM D, YYYY"}}</td>
            <td>{{this.jobTitle}}</td>
            <td>{{this.salary}}</td>
            <td>
              <a href="/edit/{{this._id}}">Update</a> | 
              <a href="/delete/{{this._id}}">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No employees found.</p>
  {{/if}}

  <br>
  <a href="/employees/create">Create New Employee</a>
</body>
</html>
